@using BasketballScoreBook.Models
@model BasketballScoreBook.Models.PlayerViewModel
@{
    ViewBag.Title = "CreatePlayer";
}

<h2>CreatePlayer</h2>

@using (Html.BeginForm("CreatePlayer", "Player", FormMethod.Post))
{
    <table>
        <tr>
            <th>Team Name</th>
            <th>Player LastName</th>
            <th>Player First Initial</th>
            <th>Player Number</th>
            <th>Player Role</th>
            <th>Player Points</th>
            <th>Player Shot Attempts</th>
            <th>Player Shot Makes</th>
            <th>Quarters Played</th>

        </tr>


        <tr>
            <td>@Html.DropDownListFor(m => m.SinglePlayer.TeamID, new SelectList(ViewBag.TeamsList, "TeamID", "TeamName")) </td>
            <td>@Html.TextBoxFor(m => m.SinglePlayer.PlayerLastName)</td>
            <td>@Html.TextBoxFor(m => m.SinglePlayer.PlayerFirstInitial)</td>
            <td>@Html.TextBoxFor(m => m.SinglePlayer.JerseyNum, new { @class = "form-control", placeholder = "Jersey Number", @type = "number" })</td>
            <td>
                @Html.DropDownListFor(m => m.SinglePlayer.PlayerRole, new List<SelectListItem>
                    {
                    new SelectListItem {Text=" -- ", },
                    new SelectListItem {Text="Point Guard" },
                    new SelectListItem {Text="Shooting Guard" },
                    new SelectListItem {Text="Small Forward" },
                    new SelectListItem {Text="Power Forward" },
                    new SelectListItem {Text="Center" }})
            </td>

            <td>@Html.TextBoxFor(m => m.SinglePlayer.PlayerPoints, new { @class = "form-control", placeholder = "Player Points", @type = "number" })</td>
            <td>@Html.TextBoxFor(m => m.SinglePlayer.PlayerShotAttempts, new { @class = "form-control", placeholder = "Player Shot Attempts", @type = "number" })</td>
            <td>@Html.TextBoxFor(m => m.SinglePlayer.PlayerShotMakes, new { @class = "form-control", placeholder = "Player Shot Makes", @type = "number" })</td>
            <td>@Html.TextBoxFor(m => m.SinglePlayer.QuarterPlayed, new { @class = "form-control", placeholder = "Quarters Played", @type = "number" })</td>

        </tr>

    </table>
    <input type="submit" value="Submit" />
}

