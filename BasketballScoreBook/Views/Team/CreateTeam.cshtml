@model BasketballScoreBook.Models.TeamViewModel
@{
    ViewBag.Title = "CreateTeam";
}

<h2>CreateTeam</h2>

@using (Html.BeginForm("CreateTeam", "Team", FormMethod.Post))
{

    <table>
        <tr>
            <th>Team Name</th>
            <th>Team Level</th>
            <th>Team Gender</th>
           
            @*<th>Player Points</th>
                <th>Player Shot Attempts</th>
                <th>Player Shot Makes</th>*@
        </tr>

        <tr>
            <td>@Html.TextBoxFor(m => m.SingleTeam.TeamName)</td>
            <td>@Html.TextBoxFor(m => m.SingleTeam.TeamLevel)</td>
            <td>@Html.TextBoxFor(m => m.SingleTeam.TeamGender)</td>
            
        </tr>

        
    </table>

<input type="submit" value="Submit" />
}
