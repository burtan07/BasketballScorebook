            <td>@Html.DisplayFor(m => game.AwayTeamFouls)</td>
            <td>@Html.DisplayFor(m => game.AwayTeamTimeOuts)</td>
            <td>@Html.DisplayFor(m => game.AwayTeamTurnOvers)</td>
            <td>@Html.DisplayFor(m => game.AwayTeamShotAttempts)</td>
            <td>@Html.DisplayFor(m => game.AwayTeamShotMakes)</td>
        </tr>
    }
</table>