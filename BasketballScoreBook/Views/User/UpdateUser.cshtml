@using BasketballScoreBook.Models
@model BasketballScoreBook.Models.UserViewModel

@{
    ViewBag.Title = "UpdateUser";
}

<h2>UpdateUser</h2>

@using (Html.BeginForm("UpdateUser", "User", FormMethod.Post))
{
    <div class="UserInfoBox">
        <div class="LabelDisplayTextBoxPos">
            <div class="LabelSpacing">
                @Html.LabelFor(m => m.SingleUser.UserID)
                @Html.DisplayFor(m => m.SingleUser.UserID)
            </div>
        </div>

        <div class="LabelDisplayTextBoxPos">
            <div class="LabelSpacing">
                @Html.LabelFor(m => m.SingleUser.UserName)
                @Html.DisplayFor(m => m.SingleUser.UserName)
            </div>
        </div>

        <div class="LabelDisplayTextBoxPos">
            <div class="LabelSpacing">
                @Html.LabelFor(m => m.SingleUser.RoleID)
                @Html.DisplayFor(m => m.SingleUser.RoleID)
            </div>
            <div class="TextBoxPos">
                @Html.DropDownListFor(m => m.SingleUser.RoleID, new List<SelectListItem>
                    {
                    new SelectListItem {Text=" -- ", },
                    new SelectListItem {Text="1" },
                    new SelectListItem {Text="2" },
                    new SelectListItem {Text="3" } })
                
            </div>
        </div>

    </div>

    <input type="submit" value="Submit" />
}