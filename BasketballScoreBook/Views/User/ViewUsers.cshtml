@using BasketballScoreBook.Models
@model BasketballScoreBook.Models.UserViewModel
    @{
        ViewBag.Title = "ViewUsers";
    }

    <h2>ViewUsers</h2>

    <table>
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Role ID</th>
        </tr>
        @foreach(UserModel user in Model.Users)
        {  
            <tr>
                <td>@Html.DisplayFor(m => user.UserID)</td>
                <td>@Html.DisplayFor(m => user.UserName)</td>
                <td>@Html.DisplayFor(m => user.RoleID)</td>
                <td>@Html.ActionLink("Update User", "UpdateUser", "User", routeValues: new { UserID = user.UserID, UserName = user.UserName, RoleID = user.RoleID }, htmlAttributes: new { @class = "btn btn-primary btn-large" })</td>
                <td>@Html.ActionLink("Password Reset", "PasswordReset", "User", routeValues: new { UserID = user.UserID, UserName = user.UserName }, htmlAttributes: new { @class = "btn btn-primary btn-large" })</td>
                <td>@Html.ActionLink("Delete User", "DeleteUser", "User", routeValues: new { UserID = user.UserID }, htmlAttributes: new { @class = "btn btn-primary btn-large" })</td>
                
            </tr>

        }

    </table>
